<%= form_for [@customer, @invoice] do |f| %>

  <div class="product">
    <h2>Item #1</h2>
    <%= f.fields_for :invoice_items, @invoice.invoice_items[0] do |item| %>
      <div class="field">
        <%= item.label :quantity %>
        <%= item.number_field :quantity %>
      </div>
      <div class="field">
        <%= item.label :product %>
        <%= item.text_field :product %>
      </div>
      <div class="field">
        <%= item.label :unit_price %>
        <%= item.number_field :unit_price, step: :any %>
      </div>
    <% end %>
    <div class="field">
      <strong>Amount: $<span class="amount" id="amount1">0.00</span></strong>
    </div>
  </div>

  <div class="product">
    <h2>Item #2</h2>
    <%= f.fields_for :invoice_items, @invoice.invoice_items[1] do |item| %>
      <div class="field">
        <%= item.label :quantity %>
        <%= item.number_field :quantity %>
      </div>
      <div class="field">
        <%= item.label :product %>
        <%= item.text_field :product %>
      </div>
      <div class="field">
        <%= item.label :unit_price %>
        <%= item.number_field :unit_price, step: :any %>
      </div>
    <% end %>
    <div class="field">
      <strong>Amount: $<span class="amount" id="amount2">0.00</span></strong>
    </div>
  </div>

  <!-- Submit Button -->
  <%= f.submit 'Create Invoice' %>
<% end %>
